.p-tree {
    .tree-node-back {
        &:not(:hover) .add-btn {
            display: none;
        }
        .node.no-permission {
            > .data, > .icon {
                @apply text-gray-400;
                cursor: not-allowed;
            }
            .add-btn {
                display: none;
            }
        }
    }
}
